---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const {title} = Astro.props;
---
<!DOCTYPE html>
<html class="h-full bg-gray-50" lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Primary Meta Tags -->
  <title>{title} | BloccFeed</title>
  <meta name="title" content="BloccFeed – Turn Ideas into Startups" />
  <meta name="description" content="BloccFeed is the world’s first marketplace where ideas are shared, discovered, and built together. Share your vision, find collaborators, or invest in the next big thing." />
  <meta name="keywords" content="BloccFeed, startups, ideas, marketplace, innovation, entrepreneurship, collaboration, invest, mobile app" />
  <meta name="author" content="April Twenty Eighth" />
  <meta name="theme-color" content="#7c3aed" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://bloccfeed.space/" />
  <meta property="og:title" content="BloccFeed – Turn Ideas into Startups" />
  <meta property="og:description" content="Discover, share, and build the next big thing with BloccFeed. A marketplace for ideas, collaboration, and innovation." />
  <meta property="og:image" content="https://bloccfeed.space/logo.png" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://bloccfeed.space/" />
  <meta property="twitter:title" content="BloccFeed – Turn Ideas into Startups" />
  <meta property="twitter:description" content="Discover, share, and build the next big thing with BloccFeed. A marketplace for ideas, collaboration, and innovation." />
  <meta property="twitter:image" content="https://bloccfeed.space/logo.png" />

  <!-- Icons -->
  <link rel="icon" type="image/png" href="/favicon.png" />
  <link rel="apple-touch-icon" href="/logo.png" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&family=Roboto:wght@100&display=swap" rel="stylesheet">
  <ViewTransitions />
</head>
<body class="h-full font-nunito">

<div class="bg-white">
  <!-- Header -->
  <header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Blocc Feed</span>
          <img class="h-20 w-auto" src="./logo.png" alt="">
        </a>
      </div>
      <div id="openNavBar" class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="/" class="text-sm font-semibold leading-6 text-gray-900">Home</a>
        <a href="/features" class="text-sm font-semibold leading-6 text-gray-900">Features</a>
        <a href="/legal" class="text-sm font-semibold leading-6 text-gray-900">Legal</a>
        <a href="/about" class="text-sm font-semibold leading-6 text-gray-900">About</a>
        <a href="/contact" class="text-sm font-semibold leading-6 text-gray-900">Contact</a>
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <!-- Download Button -->
        <a href="/download">
        <button class="button" type="button">
          <span class="button__text">Download</span>
        </button>
        </a>
</div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="navBar" class="hidden lg:hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div
        class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
        <div class="flex items-center justify-between">
          <a href="/" class="-m-1.5 p-1.5">
            <span class="sr-only"></span>
            <img class="h-8 w-auto" src="./logo.png" alt="">
          </a>
          <button id="closeNavBar" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                 aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6"> 
                <a href="/"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Home</a>
              <a href="/features"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Features</a>
              <a href="/legal"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Legal</a>
              <a href="/about"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About</a>
                 <a href="/contact"
                 class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Contact</a>
            </div>
            <div class="py-6">
              <!-- Download Button -->
        <a href="/download">
        <button class="button" type="button">
          <span class="button__text">Download</span>
        </button>
        </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="isolate">
    <slot />
  </main>

  <!-- Footer -->
  <div class="mx-auto mt-32 max-w-7xl px-6 lg:px-8">
    <Footer/>
  </div>
</div>

</body>
</html>
<style>
.button {
  --font-color: #fff;
  --bg-color: linear-gradient(135deg, #7c3aed, #6366f1); /* purple-indigo gradient */
  --bg-color-sub: rgba(255,255,255,0.15);
  --main-color: #4c1d95; /* deep purple border/shadow */
  position: relative;
  width: 130px;
  height: 44px;
  cursor: pointer;
  display: flex;
  align-items: center;
  border: 2px solid var(--main-color);
  box-shadow: 4px 4px var(--main-color);
  background: var(--bg-color);
  border-radius: 10px;
  overflow: hidden;
}
.button, .button__icon, .button__text { transition: all 0.3s; }
.button .button__text {
  transform: translateX(22px);
  color: var(--font-color);
  font-weight: 600;
}
.button .button__icon {
  position: absolute;
  transform: translateX(120px);
  height: 100%;
  width: 40px;
  background-color: var(--bg-color-sub);
  display: flex;
  align-items: center;
  justify-content: center;
}
.button .svg { width: 20px; fill: #fff; }
.button:hover {
  filter: brightness(1.1);
}
.button:hover .button__text { color: transparent; }
.button:hover .button__icon {
  width: 158px;
  transform: translateX(0);
}
.button:active {
  transform: translate(3px, 3px);
  box-shadow: 0px 0px var(--main-color);
}
</style>



<script>
  const navBar: HTMLElement = document.getElementById('navBar');
  const closeNavBar = document.getElementById('closeNavBar');
  const openNavBar = document.getElementById('openNavBar');

  closeNavBar.addEventListener('click', toggleMenu);
  openNavBar.addEventListener('click', toggleMenu);

  function toggleMenu() {
    navBar.classList.toggle("hidden");
  }
</script>
